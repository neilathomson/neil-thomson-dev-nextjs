// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model About {
  id      String @id @default(cuid())
  image   String?
  name    String
  tagline String
  about   String
}

model SkillGroup {
  id      String  @id @default(cuid())
  title   String  @unique
  ordinal Int     @unique
  skills  Skill[]
}

model Skill {
  id          String     @id @default(cuid())
  image       String
  title       String
  description String?
  rating      Float
  groupId     String
  group       SkillGroup @relation(fields: [groupId], references: [id])
  Projects    Project[]
}

model Education {
  id     String    @id @default(cuid())
  image  String
  school String
  grade  String
  from   DateTime
  to     DateTime?
}

model Project {
  id          String  @id @default(cuid())
  image       String
  title       String
  description String
  skills      Skill[]
}

model Experience {
  id          String    @id @default(cuid())
  image       String
  company     String
  position    String
  from        DateTime
  to          DateTime?
  description String
}
